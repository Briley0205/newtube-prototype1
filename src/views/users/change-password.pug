extends ../base

block content
    if errorMessage
        span=errorMessage
    if !loggedInUser.socialOnly
        form(method="POST")
            input(placeholder="Old Password", type="password", name="oldPassword")
            input(placeholder="New Password", type="password", name="newPassword")
            input(placeholder="New Password Confirmation", type="password", name="newPassword1")

            input(type="submit", value="Change Password")
    else
        p You have continued with social login. There is no need to change password.