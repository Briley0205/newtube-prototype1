extends base.pug
<!--join() 메서드는 배열의 모든 요소를 연결해 하나의 문자열로 만든다.-->

block content 
    h4 Update Video
    form(method="POST")
        input(name="title", placeholder="New video title", value=videos.title, required)
        input(name="description", placeholder="Description", value=videos.description, required, type="text")
        input(name="hashtags", placeholder="Hashtags, separated by comma.", value=videos.hashtags.join(), required, type="text")
        input(value="Save", type="submit")