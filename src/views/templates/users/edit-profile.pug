extends ../../base

block content
    if errorMessage
        span=errorMessage
    img(src="/" + loggedInUser.avatarUrl, width="100px")
    <!--Multer will not process any form which is not multipart(multipart/form-data) accept="image/*"-->
    form(method="POST", enctype="multipart/form-data")
        label(for="avatar") Avatar
        input(type="file", id="avatar", name="avatar", accept=".png, .jpg, .jepg")

        input(name="email", placeholder="email", type="email", required, value=loggedInUser.email)
        input(name="name", type="text" placeholder="Profile name", required, value=loggedInUser.name)
        input(name="username", type="text" placeholder="User name", required, value=loggedInUser.name)
        input(type="submit", value="Update Profile")
        if !loggedInUser.socialOnly
            hr
            a(href="change-password") Change Password &rarr;