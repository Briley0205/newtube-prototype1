extends ../base

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name="username", type="text" placeholder="User name", required)
        input(name="password", type="password" placeholder="Password", required)
        input(type="submit", value="Login")
        br
        <!--http://github.com/login/oauth/authorize?client_id=fdb08794f95501213bfd&scope=read:user user:email--->
        div
            a(href="/users/github/start") Continue with Github &rarr;
        div
            a(href="/users/kakao/start") Continue with Kakao &rarr;
        div
            a(href="/users/google/start") Continue with Google &rarr;
    hr
    div
        span Don't have an account?
        a(href="/join") Create now &rarr;