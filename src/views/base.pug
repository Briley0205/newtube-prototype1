doctype html
html(lang="ko")
    head
        title #{pageTitle} | Newtube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header 
            if fakeUser.loggedIn
                small Nice to meet you, #{fakeUser.username}
                h1=pageTitle
            nav 
                ul 
                    if fakeUser.loggedIn
                        li 
                            a(href="/users/logout") Log out
                    else 
                        li 
                            a(href="/login") Login
                    li 
                        a(href="/") Home
                ul
                    li 
                        a(href="/videos/upload") Upload Video
        main
        block content
    include partials/footer