doctype html
html(lang="ko")
    head
        title #{pageTitle} | Newtube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header 
            small Nice to meet you
            h1=pageTitle
        nav 
            ul
                if loggedIn
                    li
                        a(href="/users/logout") Log out
                    li
                        a(href=`/users/${loggedInUser._id}`) #{loggedInUser.name}'s Profile
                    li
                        a(href="/users/edit") Edit Profile
                    li 
                        a(href="/videos/upload") Upload Video
                else
                    li 
                        a(href="/join") Join
                li 
                    a(href="/") Home
            ul
                li 
                    a(href="/search") Search
        main
            block content
        include partials/footer
        script(src="/assets/js/main.js")